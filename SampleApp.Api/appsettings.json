{
  //healthchecks
  "MemoryHealthCheckBytesThreshold": 1073741824, //1Gb 1073741824

  //Azure client defaults
  "AzureClientDefaults": {
    "Diagnostics": {
      "IsTelemetryDisabled": false,
      "IsLoggingContentEnabled": true
    },
    "Retry": {
      "MaxRetries": 5,
      "MaxDelay": 120,
      "Mode": "Exponential"
    }
  },
  //IOptions - internal
  "AzureBlobStorageManagerSettings": {
  },
  "EventGridPublisherManagerSettings": {
    "LogEventData": true
  },
  "TodoServiceSettings": {
    "StringProperty": "some string",
    "IntProperty": 5
  },

  //IOptions - external
  "SampleApiRestClientSettings": {
    "BaseUrl": "https://api-dev-2.azurewebsites.net/api/v1.1/", // "https://ef-api-dev-1.azurewebsites.net/api/v1.1/" "https://localhost:44318/api/v1.1/"
    "Scopes": [
      "86ee9021-a8be-41aa-9d88-8cba39d03ed4/.default" //Entra App Reg: AppID (securing the api side)
    ]
  },
  "WeatherServiceSettings": {
    "BaseUrl": "https://weatherapi-com.p.rapidapi.com",
    "Host": "weatherapi-com.p.rapidapi.com"
  },
  "ChatGPT_Plugin": {
    "Enable": false,
    "Url": "https://localhost:44318/"
  },

  //background services - timer crons
  "CronServiceSettings": {
    "CronJobs": [
      {
        "JobName": "Run every 30 seconds",
        "Cron": "*/30 * * * * *",
        "SleepIntervalSeconds": 5,
        "SomeUrl": "some url"
      },
      {
        "JobName": "Run every 1 minute",
        "Cron": "0 */1 * * * *",
        "SleepIntervalSeconds": 10,
        "SomeTopicOrQueue": "some topic"
      },
      {
        "JobName": "Run every 2 minutes",
        "Cron": "0 */2 * * * *",
        "SleepIntervalSeconds": 20,
        "SomeUrl": "some url"
      }
    ]
  },

  "SwaggerSettings": {
    "Enable": true,
    "XmlCommentsFileName": "SampleApp.Api.xml",
    "OpenApiTitle": "Sample App"
  },

  "Logging": {
    //default logger
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "System": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    },
    "ApplicationInsights": {
      "LogLevel": {
        "Default": "Information",
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.Hosting.Lifetime": "Information"
      }
    }
  },
  "EnableSqlCommandTextInstrumentation": true,
  "AllowedHosts": "*",
  //convention picked up by app insights
  "ApplicationInsights": {
    "InstrumentationKey": "",
    "EnableAdaptiveSampling": false,
    "EnablePerformanceCounterCollectionModule": false
  }
}
